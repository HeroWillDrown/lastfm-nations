.two-columns
  .colA
    %div
      %h3 Charts
      .content
        %img.chart{ :src => @pie_chart_url }
  .colB
    %div
      %h3 Artists
      .content
        %ol
          - @artists.each do |artist|
            %li
              %a{ :href => "/artist/info/#{artist[0]}.xhtml"} #{artist[0]} 
              (#{artist[1]}) -> #{artist[2]}
